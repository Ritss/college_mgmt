<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    >

  <LinearLayout
      android:layout_width="316dp"
      android:layout_height="wrap_content"
      android:orientation="vertical" >
    
                        <TextView
                            android1:layout_width="wrap_content"
                            android1:layout_height="wrap_content"
                            android1:layout_gravity="center"
                            android1:paddingLeft="10px"
                            android1:paddingTop="30px"
                            android1:text="WELCOME" 
            				android1:textSize="40dp"
            				android1:textStyle="bold"
            				android1:typeface="sans" />
        
                        <CheckedTextView
                            android1:id="@+id/checkedTextView2"
                            android1:layout_width="wrap_content"
                            android1:layout_height="wrap_content"
                            android1:layout_below="@+id/checkedTextView1"
                            android1:layout_centerHorizontal="true"
                            android1:paddingBottom="20px"
                            android1:paddingLeft="45dp"
                            android1:paddingTop="20px"
                            android1:text="ADMINISTRATOR"
                            android1:layout_gravity="left"
                            
                            android1:textSize="30dp" />
                        
                         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnSUBJECT"
                style="@style/DashboardButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
               
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android1:layout_weight="1"
                android:text="SUBJECT"
                android1:drawableTop="@drawable/btn_subj1" />

            <Button
                android:id="@+id/btnCLASS"
                style="@style/DashboardButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android1:drawableTop="@drawable/btn_class"
                
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="CLASS" />
        </LinearLayout>

             <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnSTUDENT"
                style="@style/DashboardButton"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android1:layout_weight="0.69"
                android:text="STUDENT"
                android1:drawableTop="@drawable/btn_stud1" />

            <Button
                android1:id="@+id/btnDIVISION"
                style="@style/DashboardButton"
                android1:layout_width="161dp"
                android1:layout_height="wrap_content"
                android1:layout_marginLeft="5dp"
                android1:layout_marginRight="5dp"
                android1:layout_weight="0.72"
                android1:drawableTop="@drawable/btn_div"
                android1:text="DIVISION" />

        </LinearLayout>
                         

            <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnREPORTS"
                style="@style/DashboardButton"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android1:layout_weight="0.69"
                android:text="REPORTS"
                android1:drawableTop="@drawable/btn_reports" />

            <Button
                android:id="@+id/btnSTAFF"
                android:layout_width="161dp"
                style="@style/DashboardButton"
                android:layout_height="wrap_content"
                android1:drawableTop="@drawable/btn_staff1"
                android:layout_gravity="right"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.72"
                android:text="STAFF" />
        </LinearLayout>
             
 <Button
                android:id="@+id/btnEXIT"
                style="@style/DashboardButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android1:layout_weight="0.28"
                android:text="EXIT"
                android1:drawableTop="@drawable/btn_exit" />
            
</LinearLayout>
    
</ScrollView>

