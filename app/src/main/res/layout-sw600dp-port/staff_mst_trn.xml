<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_gravity="center"
            android1:paddingLeft="10px"
            android1:paddingTop="30px"
            android1:text="WELCOME"
            android1:textSize="40dp"
            android1:textStyle="bold"
            android1:typeface="sans" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text=" "
            android:textColor="#FF6600"
            android:textSize="30sp"
            android:textStyle="bold" />

 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp" >

            <Button
                android:id="@+id/btnAttendance"
                style="@style/DashboardButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android1:layout_weight="1"
                android:text="ATTENDANCE"
                android1:drawableTop="@drawable/btn_subj1" />
       

        <Button
            android:id="@+id/btnReports"
            style="@style/DashboardButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android1:layout_weight="0.28"
            android:text="REPORTS"
            android1:drawableTop="@drawable/btn_reports" />

        <Button
            android:id="@+id/btnExit"
            style="@style/DashboardButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android1:layout_weight="0.28"
            android:text="EXIT"
            android1:drawableTop="@drawable/btn_exit" />
    </LinearLayout>

</ScrollView>